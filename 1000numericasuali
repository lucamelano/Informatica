<body>
    <button onclick="numeri(1000)">numeri</button>
    <p id="out"></p>
    
<script>

function numeri(n) {
            let dado=0;
            let casuale=0;
            let str="";
            for(let i=0;i<n;i++)
            {
            casuale=Math.random();
            dado=Math.round(casuale*998)+1;
            str=str+" "+ dado;   
            }
            document.getElementById("out").innerHTML=str;
        }

</script>
  
